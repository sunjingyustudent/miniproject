.scroll-view {
	height: 100vh;
	overflow-y: auto;
}
.recently {

}
.recently .item {

}
.recently .figure {
    display: block;
	width: 100%;
    /*height: auto;*/
	background-color: #eee;
}
.recently .info {
    padding: 30rpx;
}
.info .title-bar {
    height: 80rpx;
    line-height: 40rpx;
    overflow: hidden;
    font-size: 28rpx;
    color: #212121;
}
.subscribe-bar {
    display: -webkit-box;
	display: -webkit-flex;
	display: flex;
    -webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    padding: 20rpx 0 30rpx;
    width: 100%;
    height: 50rpx;
}
.popularity-bar {
    display: -webkit-box;
	display: -webkit-flex;
	display: flex;
    -webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
    height: 50rpx;
}
.subscribe-bar .icon-popularity {
    width: 38rpx;
    height: 38rpx;
}
.subscribe-bar .counts {
    position: relative;
    margin-left: 20rpx;
    font-size: 24rpx;
    color: #818181;
}
.subscribe-btn {
    margin: 0;
    width: 170rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    font-size: 24rpx;
    border: 0;
    border-radius: 8rpx;
    background-color: #FF4F4D;
    color: #fff;
}
.subscribe-btn.actived {
    background-color: #FFBF37;
}
