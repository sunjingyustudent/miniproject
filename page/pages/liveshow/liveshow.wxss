.liveshow{
	width: 100%;
	position: relative;
}
/*课程详情start*/
.liveshow-banner{
	width: 100%;
}
.liveshow-banner-img{
	width: 100%;
}
.class-title{
	width: 690rpx;
	height: 124rpx;
	margin: 20rpx 30rpx 0rpx 30rpx;
	border-bottom: 2rpx solid #E5E5E5;
}
.class-info{
	width: 690rpx;
	height: 78rpx;
	padding:0 30rpx;
	line-height: 78rpx;
	font-size: 24rpx;
	color: #8E8E8E;
	position: relative;
}
.info-text{
	width: 242rpx;
	height: 78rpx;
	padding: 0px 20rpx 0px 0px;
	border-right: 1rpx solid #979797;
}
.info-num-icon{
	width: 24rpx;
	height: 28rpx;
	vertical-align: middle;
	margin: 0rpx 20rpx 0rpx 20rpx;
}
.info-num-text{
	width: 120rpx;
	height: 78rpx;
	margin-right: 20rpx;
}
.head-icon{
	width: 40rpx;
	height: 40rpx;
	vertical-align: middle;
	border-radius: 20rpx;
	margin-right: 20rpx;
}
.extend-icon{
	width: 12rpx;
	height: 24rpx;
	position: absolute;
	bottom: 25rpx;
	right: 30rpx;
}
.class-content{
	width: 100%;
	border-top: 10rpx solid #efefef;
}
.class-content .class-content-img{
	width: 100%;
}
.class-footer{
	width: 100%;
	height: 120rpx;
	text-align: center;
	color: #fff;
	background-color: #fff;
	position: fixed;
	bottom: 0;
}
.class-footer-button{
	background-color: #ff4646;
	width: 690rpx;
	height: 80rpx;
	line-height: 80rpx;
	border-radius: 8rpx;
	margin: 20rpx 30rpx;
}
/*课程详情end*/

/*预约弹层start*/
.bookCover{
	width: 100%;
	height: 100%;
}
.bookCover-bg{
	width: 100%;
	height: 100%;
	background-color: #000;
	opacity: .2;
	position: absolute;
	top: 0;
}
.bookCover-img{
	width: 340rpx;
	height: 300rpx;
	position: fixed;
	top: 40rpx;
	right: 40rpx;
}
/*预约弹层end*/

/*进入荔枝微课start*/
.interclassPage{
	width: 100%;
	height: 100%;
	background-color: #F6F6F6 ;
	position: absolute;
	top: 0;
}
.interclassPage-text{
	position: fixed;
	font-size: 24rpx;
	color: #645C58;
	letter-spacing: 4rpx;
	left: 266rpx;
	top: 318rpx;
	width: 220rpx;
	height: 40rpx;
}
.interclassPage-img{
	position: fixed;
	left: 194rpx;
	top: 422rpx;
	width: 364rpx;
	height: 120rpx;
}
/*进入荔枝微课end*/

/*课程下架start*/
.class-down{
	width: 100%;
	height: 100%;
}
.class-down .class-down-icon{
	width: 200rpx;
	height: 200rpx;
	position: absolute;
	top: 300rpx;
	left: 275rpx;
}
.class-down .class-down-tip{
	width: 100%;
	height: 50rpx;
	line-height: 50rpx;
	position: absolute;
	top: 150rpx;
	font-size: 28rpx;
	text-align: center;
	display:block;
}
.class-down .go-recently{
    width: 500rpx;
	height: 80rpx;
	font-size: 36rpx;
	line-height: 80rpx;
	background-color: #ff4646;
	border-radius: 8rpx;
	position: absolute;
	top: 600rpx;
	left: 125rpx;
	text-align: center;
	color: #fff;
}

/*课程下架end*/