.feedback-form {
	position: absolute;
	left: 0;
	bottom: 0;
	z-index: 1001;
	width: 100%;
	height: 600rpx;
	background-color: #fff;
}
.feedback-form .hd {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	align-items: center;
	padding: 14rpx 30rpx;
	height: 40rpx;
	border-bottom: #d7d7d7 solid 1rpx;
}
.icon-head {
	width: 4rpx;
	height: 30rpx;
	background-color: #E52520;
}
.title {
	margin: 0 0 0 10rpx;
	font-size: 28rpx;
	color: #323232;
}
.feedback-form .bd {
	padding: 20rpx 30rpx;
}
.feedback-form .bd .content {
	padding: 10rpx;
	width: 670rpx;
	height: 380rpx;
	border: #d7d7d7 solid 1rpx;
	line-height: 40rpx;
	font-size: 30rpx;
	color: #a0a0a0;
}
.feedback-form .bd .submit-btn {
	margin: 10rpx 0 0;
	width: 680rpx;
	height: 80rpx;
	background-color: #FF4646;
	border-color: #FF4646;
	color: #fff;
}
